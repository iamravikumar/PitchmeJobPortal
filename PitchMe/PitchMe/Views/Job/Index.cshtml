                <div class="col-sm-8 col-md-7">
                    <div class="section job-list-item">
                        <div class="featured-top">
                            <h4>Showing @ViewBag.StartIndex- @ViewBag.EndIndex of @ViewBag.ModelCount job ads</h4>
                            <div class="dropdown pull-right">
                                <div class="dropdown category-dropdown">
                                    <h5>Sort by:</h5>
                                    <a data-toggle="dropdown" href="#"><span class="change-text"></span><i class="fa fa-caret-square-o-down"></i></a>
                                    <ul class="dropdown-menu category-change">                                        
                                        <li>@Html.ActionLink("Most Popular", "Index", new { sortOrder = ViewBag.PopularSortParm })</a></li>
                                        <li>@Html.ActionLink("Most Recent", "Index", new { sortOrder = ViewBag.DateSortParm })</li>
                                        <li>@Html.ActionLink("Highest Salary", "Index", new { sortOrder = ViewBag.SalarySortParm })</li>
                                    </ul>
                                </div><!-- category-change -->
                            </div>
                        </div><!-- featured-top -->
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount


                        <div id="jobsDiv">
                            @foreach (var item in Model)
                            {
                                <div class="job-ad-item">
                                    <div class="item-info">
                                        <div class="item-image-box col-sm-3">
                                            <div class="item-image">
                                                <a href="@Url.Action("details","job", new{id=@item.ID} )"> <img src="@Url.Content("~/assets/images/job/4.png")" alt="Image" class="img-responsive"> </a>
                                            </div><!-- item-image -->
                                        </div>

                                        <div class="ad-info col-sm-9">
                                            <span> @Html.ActionLink(@item.Title, "details", "Job", new { id = item.ID }, null)  @@ @item.Company.Name</span>
                                            <div class="ad-meta">
                                                <ul>
                                                    <li><i class="fa fa-map-marker" aria-hidden="true"></i>@item.State, @item.Country</li>
                                                    <li><i class="fa fa-clock-o" aria-hidden="true"></i>@item.Type.ToString()</li>
                                                    <li><i class="fa fa-money" aria-hidden="true"></i>NGN @item.MinimumSalary.ToString("N2") - NGN @item.MaximumSalary.ToString("N2")</li>
                                                </ul>
                                            </div><!-- ad-meta -->
                                        </div><!-- ad-info -->
                                    </div><!-- item-info -->
                                </div><!-- job-ad-item -->
                            }
                        </div>

  
               

