@model IEnumerable<Pitchme.Models.Implementation.Job>

<section class=" job-bg page ad-profile-page">
    <div class="container">
        <div class="breadcrumb-section">
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li>Applied Job</li>
            </ol>
            <h2 class="title">Applied Job</h2>
        </div><!-- breadcrumb-section -->

        <div class="job-profile section">
            <div class="user-profile">
                <div class="user-images">
                    @*<img src="~/assets/images/user.jpg" alt="User Images" class="img-responsive">*@
                    <img class="img-responsive" src="@Url.Content(ViewBag.ProfileImgUri)" alt="User" style="width:73px;height:72px">
                </div>
                <div class="user">
                    <h2>Hello, <a href="#">@ViewBag.UserName.Split('@')[0]</a></h2>
                    <h5>You last logged in at: 10-01-2017 6:40 AM [ USA time (GMT + 6:00hrs)]</h5>
                </div>

                <div class="favorites-user">
                    <div class="my-ads">
                        <a href="/profile/AppliedJobs">@ViewBag.NoOfAppliedJobs<small>Applied Jobs</small></a>
                    </div>
                    <div class="favorites">
                        <a href="/profile/Favourites">@ViewBag.NoOfFavourites<small>Favorites</small></a>
                    </div>
                </div>
            </div><!-- user-profile -->

            <ul class="user-menu">
                <li>@Html.ActionLink("Manage Account", "Manage")</li>
                <li>@Html.ActionLink("Resume", "Index")</li>
                <li>@Html.ActionLink("Edit Resume", "EditResume")</li>
                @*<li>@Html.ActionLink("Profile Details", "Index")</li>*@
                <li>@Html.ActionLink("Favourites", "Favourites")</li>
                <li class="active">@Html.ActionLink("Applied jobs", "AppliedJobs")</li>
                <li><a href="#">Close account</a></li>
            </ul>
        </div><!-- ad-profile -->


        <div class="section trending-ads latest-jobs-ads">
            <h4>Applied Jobs</h4>

            @foreach (var item in Model)
            {
                <div class="job-ad-item">
                    <div class="item-info">


                        <div class="item-image-box">
                            <div class="item-image">
                                <a href="@Url.Action("details","job", new{id=@item.ID} )"> <img src="@Url.Content("~/assets/images/job/4.png")" alt="Image" class="img-responsive"> </a>

                            </div><!-- item-image -->
                        </div>

                        <div class="ad-info">
                            <span>@Html.ActionLink(@item.Title, "details", "Job", new { id = item.ID }, null)  @@ <a href="#">@item.Company.Name</a></span>
                            <div class="ad-meta">
                                <ul>
                                    <li><a href="#"><i class="fa fa-map-marker" aria-hidden="true"></i>@item.Company.Name: @item.State, @item.Country </a></li>
                                    <li><a href="#"><i class="fa fa-clock-o" aria-hidden="true"></i>@item.Type </a></li>
                                    <li><a href="#"><i class="fa fa-money" aria-hidden="true"></i>#@item.MinimumSalary - #@item.MaximumSalary</a></li>
                                    <li><a href="#"><i class="fa fa-tags" aria-hidden="true"></i>@item.JobCategory.Name/@item.Title</a></li>
                                </ul>
                            </div><!-- ad-meta -->
                        </div><!-- ad-info -->

                        <div class="close-icon">
                            <i class="fa fa-window-close" aria-hidden="true"></i>
                        </div>
                    </div><!-- item-info -->
                </div><!-- ad-item -->
            }

        </div><!-- latest-jobs-ads -->
    </div><!-- container -->
</section><!-- ad-profile-page -->